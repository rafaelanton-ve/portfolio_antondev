---
import { Image } from 'astro:assets';
// Importar todos los iconos desde la carpeta public
import IconAstro from '/icons/astro_iconblue.svg';
import IconWordpress from '/icons/wordpress_iconblue.svg';
import IconBoostrap from '/icons/boostrap_iconblue.svg';
import IconPhp from '/icons/php_iconblue.svg';
import IconHtml from '/icons/html_iconblue.svg';
import IconCss from '/icons/css_iconblue.svg';
import IconJs from '/icons/js_iconblue.svg';
import IconNotion from '/icons/notion_iconblue.svg';
import IconFigma from '/icons/figma_iconblue.svg';
import IconWebflow from '/icons/webflow_iconblue.svg';

//Languages
